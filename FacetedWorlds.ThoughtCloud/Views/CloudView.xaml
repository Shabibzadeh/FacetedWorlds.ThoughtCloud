<UserControl x:Class="FacetedWorlds.ThoughtCloud.Views.CloudView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
	<UserControl.Resources>
		<DataTemplate x:Key="ThoughtItemTemplate">
			<Grid>
				<TextBlock Margin="0,0,0,4" TextWrapping="Wrap" Text="{Binding Text}" d:LayoutOverrides="Width, Height"/>
			</Grid>
		</DataTemplate>
	</UserControl.Resources>
    
    <Grid x:Name="LayoutRoot" Background="White" d:DataContext="{d:DesignData /SampleData/CloudViewModelSampleData.xaml}">
    	<Grid.RowDefinitions>
    		<RowDefinition Height="Auto"/>
    		<RowDefinition/>
    	</Grid.RowDefinitions>
    	<ListBox ItemsSource="{Binding Thoughts}" Margin="8,0,8,8" Grid.Row="1" ItemTemplate="{StaticResource ThoughtItemTemplate}"/>
    	<Button Content="New Thought" HorizontalAlignment="Left" Margin="8,8,0,8" Width="75" VerticalAlignment="Top" Command="{Binding NewThought}"/>

    </Grid>
</UserControl>
