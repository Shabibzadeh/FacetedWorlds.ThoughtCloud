    	<Path x:Name="Thought3TextPath" Data="M458,317 L411,380" Height="70" Canvas.Left="238" Stretch="Fill" Stroke="{StaticResource FactStrokeBrush}" StrokeThickness="7" Canvas.Top="313" UseLayoutRounding="False" Width="54"/>
    	<Path x:Name="Thought4TextPath" Data="M333,317 L384,380" Height="70" Canvas.Left="511" Stretch="Fill" Stroke="{StaticResource FactStrokeBrush}" StrokeThickness="7" Canvas.Top="314.008" UseLayoutRounding="False" Width="58"/>
    </Canvas>
</UserControl>
