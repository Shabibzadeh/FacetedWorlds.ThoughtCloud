    	<Path x:Name="CloudSharePath" Data="M495,149 L472,132" Height="37" Canvas.Left="469" Stretch="Fill" Stroke="{StaticResource FactStrokeBrush}" StrokeThickness="7" Canvas.Top="129" UseLayoutRounding="False" Width="53"/>
